<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginHorizontal="8dp"
    android:background="@android:color/white"
    android:elevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <!-- Checkbox -->
        <CheckBox
            android:id="@+id/checkBoxSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp" />

        <!-- Image -->
        <ImageView
            android:id="@+id/imageProduct"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="8dp" />

        <!-- Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên sản phẩm"
                android:textColor="#000"
                android:textSize="14sp"
                android:maxLines="2" />

            <TextView
                android:id="@+id/textPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150.000 đ"
                android:textColor="#D32F2F"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />

            <!-- Quantity control -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/btnMinus"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="6dp"
                    android:src="@drawable/outline_check_indeterminate_small_24"
                    android:backgroundTint="#C8E6C9"
                    android:contentDescription="Giảm số lượng"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="centerInside" />

                <TextView
                    android:id="@+id/textQuantity"
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_marginHorizontal="6dp"
                    android:textColor="#000" />

                <ImageView
                    android:id="@+id/btnPlus"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="6dp"
                    android:src="@drawable/outline_add_24"
                    android:backgroundTint="#C8E6C9"
                    android:contentDescription="Tăng số lượng"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="centerInside" />
            </LinearLayout>
        </LinearLayout>

        <!-- Delete icon -->
        <ImageView
            android:id="@+id/btnDelete"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/outline_delete_24"
            android:layout_marginStart="8dp"
            android:contentDescription="Xoá" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
