<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cartContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F6F6F6">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/cartHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="?attr/colorPrimary"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/iconBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/outline_arrow_back_24"
            android:contentDescription="Quay lại"
            android:layout_marginEnd="12dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Giỏ Hàng"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textSelectAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn tất cả"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Khi giỏ hàng trống -->
    <LinearLayout
        android:id="@+id/emptyCartLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_cart_empty"
            android:contentDescription="Empty cart" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giỏ hàng của bạn đang trống."
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:textColor="#444" />

        <Button
            android:id="@+id/btnContinueShopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TIẾP TỤC MUA HÀNG"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#000000"
            android:layout_marginTop="16dp" />
    </LinearLayout>

    <!-- Khi giỏ hàng có sản phẩm -->
    <LinearLayout
        android:id="@+id/fullCartLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Danh sách sản phẩm -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewCart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:clipToPadding="false" />

        <Button
            android:id="@+id/btnDeleteSelected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="XÓA SẢN PHẨM ĐÃ CHỌN"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="#D32F2F"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <!-- Footer thanh toán -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:padding="16dp">

            <!-- Mã giảm giá -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_discount"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mã Giảm Giá và Ưu Đãi Của Tôi"
                    android:textSize="14sp"
                    android:textColor="#444" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right" />
            </LinearLayout>

            <!-- Tổng cộng -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="4dp"
                android:paddingBottom="12dp">

                <TextView
                    android:id="@+id/textTotalLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tổng cộng:"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textTotalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0đ"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#D32F2F"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <Button
                android:id="@+id/btnCheckout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="THANH TOÁN"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:backgroundTint="#4CAF50" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
