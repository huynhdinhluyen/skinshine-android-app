<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true"
    android:scrollbars="none"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusableInTouchMode="true">

        <!-- Logo vÃ  App Name -->
        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/logo_skinshine"
            android:contentDescription="@string/app_logo"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/appNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp" />

        <!-- Register Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_title"
            android:textStyle="bold"
            android:textColor="#2E2E2E"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tvGoToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_go_to_login"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:clickable="true"
            android:focusable="true" />

        <!-- Form Fields -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_fullname_label"
            android:textColor="#2E2E2E"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/edtFullName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/register_fullname_hint"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:textColor="#2E2E2E"
            android:textColorHint="#2E2E2E"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_email_label"
            android:textColor="#2E2E2E"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/edtUsername"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/register_email_hint"
            android:inputType="textEmailAddress"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:textColor="#2E2E2E"
            android:textColorHint="#2E2E2E"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_phone_label"
            android:textColor="#2E2E2E"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/edtPhone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/register_phone_hint"
            android:inputType="phone"
            android:textColor="#2E2E2E"
            android:textColorHint="#2E2E2E"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="4dp"/>

        <!-- Password -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_password_label"
            android:textColor="#2E2E2E"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordInputLayout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="#888888"
            app:hintEnabled="false"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="4dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="@string/register_password_hint"
                android:inputType="textPassword"
                android:background="@drawable/edittext_bg"
                android:textColor="#2E2E2E"
                android:textColorHint="#2E2E2E"
                android:padding="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Confirm Password -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_confirm_password_label"
            android:textColor="#2E2E2E"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/confirmPasswordInputLayout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="#888888"
            app:hintEnabled="false"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="@string/register_confirm_password_hint"
                android:inputType="textPassword"
                android:background="@drawable/edittext_bg"
                android:textColor="#2E2E2E"
                android:textColorHint="#2E2E2E"
                android:padding="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Register Button -->
        <Button
            android:id="@+id/btnRegisterConfirm"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/register_button"
            android:layout_marginTop="16dp"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="100dp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>